{
  "name": "basic-node-http-server",
  "version": "1.0.0",
  "description": "Run basic NodeJs server with HTTP.  Use Babel ",
  "main": "index.js",
  "scripts": {
    "babel-node": "babel-node --presets=env",
    "start": "nodemon --exec npm run babel-node -- ./index.js",
    "build": "babel ./ -d dist",
    "debug": "node  --inspect-brk=9229 ./index.js",
    "mocha": "mocha --require babel-register",
    "test": "mocha --exit --require babel-register --recursive ./test/"
  },
  "author": "",
  "license": "MIT",
  "babel": {
    "presets": [
      "env"
    ],
    "sourceMap": "inline",
    "retainLines": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "rules": {
      "comma-dangle": 0,
      "prefer-arrow-callback": 0,
      "react/prefer-stateless-function": 0,
      "new-cap": 0,
      "no-console": 0,
      "max-len": 0,
      "no-param-reassign": 0
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "eslint": "^5.5.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4"
  },
  "dependencies": {
    "express": "^4.16.3"
  }
}
